<script type="text/javascript">
    $(document).ready(function () {
        var i = 0;

        $("input[name='add']").click(function (e) {
            $('#inputs_adicionais').append('<div id="num_ext"> <div class="col-md-6"> <label>Tipo:</label><select class="form-control" id="telefones[' + i + '].tipo" name="telefones[' + i + '].tipo"><option value="Celular">Celular</option><option value="Residencial">Residencial</option><option value="Comercial">Comercial</option></select></div> <div class="col-md-6"><label>Telefone:</label><input class="form-control" type="text" id="telefones[' + i + '].numero" name="telefones[' + i + '].numero" required></div><a href="#"><i class="glyphicon glyphicon-remove-circle" style="font-size:1.2em;"></i></a> </div>');
            i = i + 1;
        });

        $('#inputs_adicionais').delegate('a', 'click', function (e) {
            e.preventDefault();
            $(this).parent('#num_ext').remove();
            i = i - 1;
        });

    });
</script>

