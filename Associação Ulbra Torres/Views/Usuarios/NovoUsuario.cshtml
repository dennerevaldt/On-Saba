@model Associação_Ulbra_Torres.Models.Entidade.Usuarios

@{
    ViewBag.title = "Novo Usuário";
}

<div>
    <h4>GERENCIAR CONTA <small>@ViewBag.nome</small></h4>
    <hr />
</div>

<div class="col-md-4">
    <h2></h2>
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.HiddenFor(model => model.idUsuario)
            <h2>@ViewBag.nome</h2>
            <p>@ViewBag.email</p>
        </div>
    </div>
    <a class="btn btn-sm btn-default btn-block" href="/Usuarios/NovoUsuario">Novo Usuário do sistema</a><br />
    <a class="btn btn-sm btn-default btn-block" href="/Usuarios/EditarUsuario">Alterar dados cadastrais</a><br />
    <a class="btn btn-sm btn-default btn-block" href="/Usuarios/AlterarSenhaPainel">Alterar senha</a><br />
    <a class="btn btn-sm btn-danger btn-block" href="/Usuarios/ExcluirConta">Excluir conta</a><br />
</div>
<div class="col-lg-8">
    <h2></h2>
    <div class="panel panel-default col-md-12">
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    Novo Usuário do sistema
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.senha, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div align="center">
                            <input type="submit" value="Criar novo usuário" class="btn btn-success" />
                        </div>
                    </div>
                </div>

            }

            @if (ViewBag.aviso != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        document.getElementById("email").focus();
                    };
                </script>

                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                    <strong>OPS!</strong> @ViewBag.aviso
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
