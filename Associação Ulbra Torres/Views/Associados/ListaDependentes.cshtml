@model IEnumerable<Associação_Ulbra_Torres.Models.Entidade.Dependentes>

@{
    ViewBag.Title = "Dependentes";
}


<h2>DEPENDENTES <small>de @ViewBag.nomeAssociado</small></h2>
<hr />

<div class="col-md-4">
    <nav class="navbar navbar-default" role="navigation">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-lat">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse-lat">
            <div class=" panel-heading">Menu</div>
            <ul class="nav nav-stacked">
                <li><a href="/Associados/ListaDependentes?pIdAssociado=@ViewBag.idAssociado">Dependentes Cadastrados</a></li>
                <li><a href="/Associados/AdicionarDependente?pIdAssociado=@ViewBag.idAssociado">Adicionar Novo(a)</a></li>
                <li><a href="/Associados/DeletarDependente?pIdAssociado=@ViewBag.idAssociado">Excluir</a></li>
                <li class="active"><a href="/Associados/EditarDependente?pIdAssociado=@ViewBag.idAssociado">Editar</a></li>
                <li><a href="/Associados/">Voltar para Associados <i class="glyphicon glyphicon-arrow-right"></i></a></li>
            </ul>


        </div><!-- /.navbar-collapse -->
    </nav>

</div><!--/end left column-->

<div class="col-md-8">
    <h4>Lista de Dependentes</h4>
    <hr />

    @if (Model.Count() == 0)
    {
       <div class="alert alert-danger text-center">Nenhum dependente cadastrado.</div>
    }
    else
    {
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    Parentesco
                </th>
                <th>
                    Detalhes
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.parentesco)
                    </td>

                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#@Html.DisplayFor(modelItem => item.idDependente)">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="@Html.DisplayFor(modelItem => item.idDependente)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Detalhes @Html.DisplayFor(modelItem => item.nome)</h4>
                                    </div>
                                    <div class="modal-body">
                                        <dl class="dl-horizontal">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.nome)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.nome)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.email)
                                            </dt>

                                            @if (item.email == "")
                                            {
                                                <dd style="color: red;">Nenhum email informado.</dd>
                                            }
                                            else
                                            {
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.email)
                                                </dd>
                                            }

                                            <dt>
                                                @Html.DisplayNameFor(model => model.parentesco)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.parentesco)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.nacionalidade)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.nacionalidade)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.escola)
                                            </dt>

                                            @if (item.escola.nomeEscola == null)
                                            {
                                                <dd style="color: red;">Nenhuma escola informada.</dd>
                                            }
                                            else
                                            {
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.escola.nomeEscola)
                                                </dd>
                                            }

                                            <dt>
                                                @Html.DisplayNameFor(model => model.naturalidade)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.naturalidade)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.estadoNaturalidade)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.estadoNaturalidade)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.dataNascimento)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.dataNascimento)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.estadoCivil)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.estadoCivil)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.cpf)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.cpf)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.rg)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.rg)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.tituloDeEleitor)
                                            </dt>

                                            @if (item.tituloDeEleitor == "")
                                            {
                                                <dd style="color: red;">Nenhum título de eleitor informado.</dd>
                                            }
                                            else
                                            {
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.tituloDeEleitor)
                                                </dd>
                                            }

                                            <dt>
                                                @Html.DisplayNameFor(model => model.zona)
                                            </dt>

                                            @if (item.zona == "")
                                            {
                                                <dd style="color: red;">Nenhuma zona eleitoral informada.</dd>
                                            }
                                            else
                                            {
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.zona)
                                                </dd>
                                            }

                                            <dt>
                                                @Html.DisplayNameFor(model => model.secao)
                                            </dt>

                                            @if (item.secao == "")
                                            {
                                                <dd style="color: red;">Nenhuma seção eleitoral informada.</dd>
                                            }
                                            else
                                            {
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.secao)
                                                </dd>
                                            }

                                            <dt>
                                                @Html.DisplayNameFor(model => model.endereco)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.endereco)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.numero)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.numero)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.bairro)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.bairro)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.cidade)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.cidade)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.estado)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.estado)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.cep)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.cep)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.sexo)
                                            </dt>

                                            @if (item.sexo.ToString() == "H")
                                            {
                                                <dd>
                                                    Homem
                                                </dd>
                                            }
                                            else
                                            {
                                                <dd>
                                                    Mulher
                                                </dd>
                                            }

                                            <dt>
                                                @Html.DisplayNameFor(model => model.observacoes)
                                            </dt>

                                            @if (item.observacoes == "")
                                            {
                                                <dd style="color: red;">Nenhuma observação informada.</dd>
                                            }
                                            else
                                            {
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.observacoes)
                                                </dd>
                                            }

                                            <dt>
                                                Religião
                                            </dt>

                                            @if (item.religiao.nome == null)
                                            {
                                                <dd style="color: red;">Nenhuma religião informada.</dd>
                                            }
                                            else
                                            {
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.religiao.nome)
                                                </dd>
                                            }


                                            <dt>
                                                Telefones
                                            </dt>

                                            @if (item.telefones.Count == 0)
                                            {
                                                <dd style="color: red;">Nenhum telefone informado.</dd>
                                            }
                                            else
                                            {
                                                foreach (var fone in item.telefones)
                                                {
                                                    <dd>
                                                        <strong>@fone.tipo</strong>
                                                        <br />
                                                        @fone.numero
                                                    </dd>
                                                }
                                            }


                                        </dl>

                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </table>
        </div>
        }
    </div>